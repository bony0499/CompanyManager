@model CompanyManagerTest.Models.Company
@{
    ViewBag.Title = "Edit company";
}
<form asp-action="EditCompany" asp-controller="Home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="CompanyName" >Company Name</label>
        <input type="text" asp-for="CompanyName" />
    </div>
    <div>
        <label asp-for="CompanyForm">Form of company</label>
        <input type="text" asp-for="CompanyForm" />
    </div>
    <div>
        <input type="submit" value="Edit" />
        <input type="button" onclick="history.back();" value="Cancel" />
    </div>
</form>