@model IEnumerable<CompanyManagerTest.Models.Employee>
@{
    ViewBag.Title = "All workers";
}

<a asp-action="CreateEmployee">CreateEmployee</a>

<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Surname @item.Name @item.Patronymic</td>
            <td>
                <a asp-action="PersonDetails" asp-controller="Home" asp-route-id="@item.Id">More details</a> |
                <a asp-action="EditPerson" asp-controller="Home" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteWorker" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }

</table>
<div>
    <input type="button" onclick="history.back()" value="Back" />
</div>