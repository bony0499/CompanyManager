@model CompanyManagerTest.Models.Employee
@{
    ViewBag.Title = Model.Surname + " " + Model.Name + " " + Model.Patronymic;
}

<style>

    table.Mytable {
        text-decoration: none;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

        table.Mytable th {
            font-weight: normal;
            font-size: 14px;
            color: #000000;
            background-color: #ffffff;
        }

        table.Mytable td {
            font-size: 13px;
            color: #354251;
        }

        table.Mytable td, table.Mytable th {
            white-space: pre-wrap;
            padding: 10px 5px;
            line-height: 13px;
            vertical-align: middle;
            border: 1px solid #354251;
        }

        table.Mytable tr:hover {
            background-color: #f9fafb
        }

            table.Mytable tr:hover td {
                color: #354251;
                cursor: default;
            }
</style>

<h2>Employee full: @ViewBag.Title</h2>
<div>
    <table class="Mytable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Surname</th>
                <th>Name</th>
                <th>Patronymic</th>
                <th>HiringDate</th>
                <th>Rank</th>
                <th>Company</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Surname</td>
                <td>@Model.Name</td>
                <td>@Model.Patronymic</td>
                <td>@Model.HiringDate</td>
                <td>@Model.Rank</td>
                <td>@Model?.Company</td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <input type="button" onclick="history.back();" value="Back" />
</div>
